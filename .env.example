# Токен бота (обязательно)
BOT_TOKEN=your_bot_token_here

# Путь к базе данных (опционально, по умолчанию chicken.db)
DB_PATH=chicken.db

# Порог низкого остатка в граммах (опционально, по умолчанию 300)
LOW_THRESHOLD=300

# Максимальное количество сохраняемых сообщений (опционально, по умолчанию 5)
MAX_MESSAGES=5

# ID администраторов через запятую (опционально)
# Пример: ADMIN_IDS=123456789,987654321
ADMIN_IDS=

# ID топика (ветки) в группе где работает бот (опционально)
# Если не указан - бот работает везде
# Как узнать: смотри TOPIC_SETUP.md
# Пример: TOPIC_ID=12345
TOPIC_ID=

# Минимальный и максимальный вес в граммах (опционально)
MIN_WEIGHT=10.0
MAX_WEIGHT=10000.0
